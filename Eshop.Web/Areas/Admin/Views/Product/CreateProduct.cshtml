@using Eshop.Data.Entities.ProductEntities
@model Eshop.Data.DTOs.ProductDto.CreateProductDto
@{
    ViewData["Title"] = "ایجاد محصول";
    var brands = (List<Brand>)ViewData["Brands"];
}

<div class="row">
    <div class="col-lg-12">
        <div id="addproduct-accordion" class="custom-accordion">
            <div class="card">
                <div class="p-4">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 me-3">
                            <div class="avatar">
                                <div class="avatar-title font-size-16 rounded-circle bg-soft-primary text-primary">
                                    01
                                </div>
                            </div>
                        </div>
                        <div class="flex-grow-1 overflow-hidden">
                            <h5 class="font-size-16 mb-1">@ViewData["Title"]</h5>
                            <p class="text-muted text-truncate mb-0">لطفا فرم زیر را پر کنید</p>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="p-4 border-top">
                        <form asp-area="Admin" asp-controller="Product" asp-action="CreateProduct" enctype="multipart/form-data" method="post">
                            <div class="row">
                                <div class="col-lg-3">
                                    <div class="mb-3">
                                        <label class="form-label">عنوان</label>
                                        <input asp-for="Title" class="form-control">
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-lg-3">
                                    <div class="mb-3">
                                        <label class="form-label">قیمت پایه (تومان)</label>
                                        <input asp-for="BasePrice" id="currencyInput" class="form-control">
                                        <span asp-validation-for="BasePrice" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-lg-3 col-md-4">
                                    <div class="mb-3">
                                        <label for="choices-single-default" class="form-label font-size-13 text-muted">برند محصول</label>
                                        <select asp-for="BrandId" class="form-control" data-trigger="" id="choices-single-default" placeholder="برند محصول را انتخاب کنید">
                                            <option value="0">بدون برند مشخص</option>
                                            @if (brands != null && brands.Any())
                                            {
                                                foreach (var brand in brands.OrderBy(b => b.Title))
                                                {
                                                    <option value="@brand.Id">@brand.Title</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>

                                <div class="col-lg-3">
                                    <div class="mb-3 top-30px">
                                        <div class="form-check form-switch form-switch-md mb-3" dir="rtl">
                                            <input asp-for="IsAvailable" class="form-check-input" type="checkbox" checked="checked" id="active2">
                                            <label class="form-check-label" for="active2">فعال شود</label>
                                        </div>
                                    </div>
                                </div>

                                <hr />
                                <div class="col-lg-3">
                                    <div class="mb-3">
                                        <div class="file-upload">
                                            <label for="MainImage" class="file-label">تصویر محصول</label>
                                            <input type="file" asp-for="MainImage" id="MainImage" accept="image/*">
                                            <div id="fileList1" class="file-list"></div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-9">
                                    <div class="mb-3">
                                        <div class="file-upload">
                                            <label for="ProductGalleries" class="file-label">تصاویر گالری(اختیاری)</label>
                                            <input type="file" asp-for="ProductGalleries" id="ProductGalleries" accept="image/*" multiple>
                                            <div id="fileList2" class="file-list"></div>
                                        </div>
                                    </div>
                                </div>

                                <hr />
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        <label class="form-label">توضیحات کوتاه</label>
                                        <textarea asp-for="ShortDescription" id="ckeditor-classic" class="rtl form-control"></textarea>
                                        <span asp-validation-for="ShortDescription" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        <label class="form-label">توضیحات اصلی</label>
                                        <textarea asp-for="Description" id="ckeditor-classic-2" class="rtl"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>

                                <hr />
                                <div class="col-lg-6">
                                    <div class="mb-2">
                                        <h5>دسته بندی محصول :</h5>
                                    </div>
                                    <div class="col-lg-4 col-md-6">
                                        <div class="mb-3">
                                            @await Component.InvokeAsync("SelectCategories")
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-4">
                                <div class="col text-right">
                                    <button class="btn btn-success submit-btn"> <i class="mdi mdi-file-document-outline me-1"></i>ذخیره</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section AdminFooterSection
{
    <script src="/Admin/js/productactions.js"></script>
    <script>
        updateFileList("ProductGalleries", "fileList2");
    </script>
    <script src="/Admin/js/ckeditor.js"></script>
    <script src="/Admin/js/pages/form-editor.init.js"></script>
    <script src="/Admin/libs/choices.js/public/assets/scripts/choices.min.js"></script>
    <script src="/Admin/js/pages/form-advanced.init.js"></script>
}

@section AdminHeaderSection
{
    <link href="/Admin/libs/choices.js/public/assets/styles/choices.min.css" rel="stylesheet" type="text/css" />
}
