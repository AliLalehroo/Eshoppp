@using Eshop.Data.Entities.OrderEntities
@model Eshop.Data.DTOs.OrderDto.ProcessOrderDto
@{
    ViewData["Title"] = "پردازش سفارش";
}

<div class="row">
    <div class="col-lg-12">
        <div id="addproduct-accordion" class="custom-accordion">
            <div class="card">
                <div class="p-4">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 me-3">
                            <div class="avatar">
                                <div class="avatar-title font-size-16 rounded-circle bg-soft-primary text-primary">
                                    01
                                </div>
                            </div>
                        </div>
                        <div class="flex-grow-1 overflow-hidden">
                            <h5 class="font-size-16 mb-1">@ViewData["Title"]</h5>
                            <p class="text-muted text-truncate mb-0">لطفا فرم زیر را پر کنید</p>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="p-4 border-top">
                        <form asp-area="Admin" asp-controller="Order" asp-action="ProcessOrder" method="post">
                            <input asp-for="OrderId" type="hidden" />
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="mb-3">
                                        <label class="form-label">کد رهگیری پستی</label>
                                        <input asp-for="PostTraceCode" class="form-control">
                                        <span asp-validation-for="PostTraceCode" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-lg-2">
                                    <div class="mb-3">
                                        <label class="form-label">وضعیت سفارش</label>
                                        <select asp-items="@Html.GetEnumSelectList<OrderState>()" asp-for="OrderState" class="form-select"></select>
                                    </div>
                                </div>

                            </div>
                            <div class="row mb-4">
                                <div class="col text-right">
                                    <button class="btn btn-success submit-btn"> <i class="mdi mdi-file-document-outline me-1"></i>ذخیره</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

