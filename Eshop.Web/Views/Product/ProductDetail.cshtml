                             class="swiper product-gallery">
                            <div class="swiper-wrapper" title="برای بزرگنمایی تصویر دابل کلیک کنید">
                                <div class="swiper-slide">
                                    <div class="swiper-zoom-container">
                                        <img class="img-fluid" src="@(PathExtension.ProductImageImage + Model.MainImageName)" alt="" />
                                    </div>
                                </div>
                                @if (Model.ProductGalleries.Any())
                                {
                                    foreach (var gallery in Model.ProductGalleries.OrderBy(g => g.Order))
                                    {
                                        <div class="swiper-slide">
                                            <div class="swiper-zoom-container">
                                                <img class="img-fluid" src="@(PathExtension.ProductGalleryImage + gallery.ImageName)" alt="" />
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                            <div class="swiper-button-next d-none d-lg-flex"></div>
                            <div class="swiper-button-prev d-none d-lg-flex"></div>
                            <div class="swiper-pagination d-none d-lg-block"></div>
                        </div>
                        <div class="swiper product-gallery-thumb">
                            <div class="swiper-wrapper">
                                <div class="swiper-slide">
                                    <img class="img-fluid" src="@(PathExtension.ProductImageImage + Model.MainImageName)" alt="" />
                                </div>
                                @if (Model.ProductGalleries.Any())
                                {
                                    foreach (var gallery in Model.ProductGalleries.OrderBy(g => g.Order))
                                    {
                                        <div class="swiper-slide">
                                            <img class="img-fluid" src="@(PathExtension.ProductGalleryImage + gallery.ImageName)" alt="" />
                                        </div>
                                    }
                                }
                            </div>
                        </div>
